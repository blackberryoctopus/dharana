{
	"name":"Dharana for Chrome",
	"version": "1.0",
	"description": "A quick way to track time on Asana tasks",

	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

	"background": {
		"scripts": ["jquery.min.js", "background.js"],
		"persistent": false
	},

	"browser_action": {
		"default_icon": "eye.png",
		"default_title": "Dharana",
		"default_popup": "browser_popup.html"
	},

	"content_scripts": [
		{
			"matches": ["https://app.asana.com/0/*/*"],
			"css": ["quicktime.css"],
			"js": ["dharana.js", "quicktime.js"],
			"run_at": "document_end"
		}
	],

	"permissions": [ "tabs", "http://*/*", "https://*/*" ],

	"manifest_version": 2
}
